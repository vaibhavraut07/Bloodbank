<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <style>
        .nav-pills .nav-link.active,
        .nav-pills .show > .nav-link {
            color: white !important;
            background-color: #dc3545 !important;
        }
        .nav-link {
            color: #dc3545 !important;
        }
    </style>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous"
    >
</head>
<body>
    <div class="container my-4">
        <nav class="nav nav-pills flex-column flex-sm-row border-danger border rounded-3">
          <a class="flex-sm-fill text-sm-center nav-link active fw-bold" aria-current="page" href="/bloodbanks/op">BLOOD BANK</a>
          <a class="flex-sm-fill text-sm-center nav-link fw-bold" href="/Donors/check">BLOOD DONOR</a>
        </nav>
    </div>
    <div class="modal position-static d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger"><b>Blood Donor Data</b></h5>
                </div>
                <div class="modal-body">
                    <form>
                        <!-- District Select Menu -->
                        <select class="form-select mb-4" id="searchDistrict" aria-label="Default select example">
                            <option selected>Select District</option>
                            <% districts.forEach((district) => { %>
                                <option value="<%= district %>"><%= district %></option>
                            <% }); %>
                        </select>

                        <!-- City Select Menu -->
                        <select class="form-select mb-4" id="searchCity" aria-label="Default select example">
                            <option selected>Select City</option>
                            <% cities.forEach((city) => { %>
                                <option value="<%= city %>"><%= city %></option>
                            <% }); %>
                        </select>

                        <button class="btn btn-danger" onclick="searchBloodDonors()">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Content -->
    <div class="container">
        <table class="table table-bordered border-danger">
            <thead>
                <tr>
                    <th scope="col" class="text-white bg-danger">Sr no.</th>
                    <th scope="col" class="text-white bg-danger">Name</th>
                    <th scope="col" class="text-white bg-danger">Blood Group</th>
                    <th scope="col" class="text-white bg-danger">Location</th>
                    <th scope="col" class="text-white bg-danger">Contact</th>
                </tr>
            </thead>
            <tbody id="bloodDonorTableBody">
                <!-- Blood donor data will be dynamically populated here -->
            </tbody>
        </table>
    </div>

    <!-- ... your existing modal for more details ... -->

    <script>
        // Function to filter and render blood donor data based on district and city selections
        function searchBloodDonors() {
            const district = document.getElementById("searchDistrict").value;
            const city = document.getElementById("searchCity").value;

            // Make an AJAX request to fetch blood donor data based on the search criteria.
            // Replace '/api/blooddonors' with your actual API endpoint
            fetch(`/api/blooddonors?district=${district}&city=${city}`)
                .then((response) => response.json())
                .then((data) => {
                    const bloodDonorTableBody = document.getElementById("bloodDonorTableBody");
                    bloodDonorTableBody.innerHTML = ""; // Clear existing table data
                    let serialNumber = 1;
                    data.forEach((donor) => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <th scope="row">${serialNumber}</th>
                            <td>${donor.name}</td>
                            <td>${donor.bloodGroup}</td>
                            <td>${donor.location}</td>
                            <td>${donor.contact}</td>
                        `;
                        bloodDonorTableBody.appendChild(row);
                        serialNumber++;
                    });
                })
                .catch((error) => {
                    console.error(error);
                });
        }
    </script>
</body>
</html>
